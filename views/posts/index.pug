extends ../layouts/app.pug

block content
  div
    a(href='/') Main page
  div  
    a(href='/posts/new') New

  table.table(style='width:50%')
    tbody
      tr
        th='Title'
      each post in posts
        tr
          td
            a(href=`posts/${post.id}`)= post.title
          td
            form(action=`posts/${post.id}/edit` method='get') 
              input.btn.btn-primary(type='submit' value='Edit')
          td
            form(action=`/posts/${post.id}?_method=DELETE` method='post') 
              input.btn.btn-primary(type='submit' value='Delete')
              
